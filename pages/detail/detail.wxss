/* pages/detail/detail.wxss */
.headeImage {
  width: 100%;
}

.musicImage {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 200rpx;
  left: 50%;
  margin-left: -30rpx;
}

.infoContainer {
  display: flex;

}

.infoContainer text {
  margin-left: 10rpx;
  font-size: 34rpx;
}

.headeAvatar {
  width: 60rpx;
  height: 60rpx;
}

.textTitle {
  display: block;
  font-weight: bold;
  margin-top: 20rpx;
  margin-left: 15rpx;
}

.shareAndColl {
  display: flex;
  flex-direction: row-reverse;
  position: relative;
  width: 100%;
}

.line {
  width: 90%;
  height: 1rpx;
  background: #DEDEDD;
  position: absolute;
  top: 50%;
  left: 5%;
  z-index: -1;
}

.shareAndColl image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.container {
  margin-right: 10rpx;
}

.container .button {
  width: 300rpx;
  height: 90rpx;
}

.container>.textInfo {
  font-size: 32rpx;
  text-indent: 32rpx;
  margin-top: 10rpx;
}